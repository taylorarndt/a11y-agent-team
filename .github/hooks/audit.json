{
  "hooks": {
    "PostToolUse": [
      {
        "type": "command",
        "command": "bash .github/hooks/scripts/audit-log.sh",
        "windows": "powershell -ExecutionPolicy Bypass -File .github\\hooks\\scripts\\audit-log.ps1",
        "timeout": 10
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "bash .github/hooks/scripts/session-summary.sh",
        "windows": "powershell -ExecutionPolicy Bypass -File .github\\hooks\\scripts\\session-summary.ps1",
        "timeout": 10
      }
    ]
  }
}
