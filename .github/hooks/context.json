{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "bash .github/hooks/scripts/session-context.sh",
        "windows": "powershell -ExecutionPolicy Bypass -File .github\\hooks\\scripts\\session-context.ps1",
        "timeout": 15
      }
    ],
    "SubagentStart": [
      {
        "type": "command",
        "command": "bash .github/hooks/scripts/subagent-context.sh",
        "windows": "powershell -ExecutionPolicy Bypass -File .github\\hooks\\scripts\\subagent-context.ps1",
        "timeout": 10
      }
    ]
  }
}
