{
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "bash .claude/hooks/a11y-team-eval.sh",
        "windows": "powershell -ExecutionPolicy Bypass -File .claude\\hooks\\a11y-team-eval.ps1",
        "timeout": 10
      },
      {
        "type": "command",
        "command": "bash .github/hooks/scripts/sensitive-input-guard.sh",
        "windows": "powershell -ExecutionPolicy Bypass -File .github\\hooks\\scripts\\sensitive-input-guard.ps1",
        "timeout": 10
      }
    ],
    "SessionStart": [
      {
        "type": "command",
        "command": "node .github/hooks/scripts/session-start.js",
        "timeout": 15
      }
    ],
    "PreToolUse": [
      {
        "type": "command",
        "command": "bash .github/hooks/scripts/safety-gate.sh",
        "windows": "powershell -ExecutionPolicy Bypass -File .github\\hooks\\scripts\\safety-gate.ps1",
        "matcher": "Bash|mcp_github",
        "timeout": 15
      }
    ],
    "PostToolUse": [
      {
        "type": "command",
        "command": "bash .github/hooks/scripts/audit-log.sh",
        "windows": "powershell -ExecutionPolicy Bypass -File .github\\hooks\\scripts\\audit-log.ps1",
        "timeout": 15
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "node .github/hooks/scripts/session-stop.js",
        "timeout": 15
      }
    ]
  }
}
